body
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  margin 0
  padding 0
  overflow hidden

canvas
  position fixed
  display block
  width 100%
  height 100%
  background-color black
  
#instructions
  position fixed
  display block
  top 50%
  left 50%
  transform translate(-50%, -50%);
  pointer-events none
  h1
    user-select none
    color white
    text-align center
